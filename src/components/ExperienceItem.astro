---
interface Props {
  date: string;
  title: string;
  description: string;
  link: string;
}
const { date, title, description, link } = Astro.props;
---

<li class="mb-10 ms-4">
  <div
    class="absolute w-3 h-3  text-yellow-500 dark:bg-yellow-400 rounded-full mt-1.5 -start-1.5 border border-yellow-300 bg-yellow-400 "
  >
  </div>
  <time
    class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500"
    >{date}
  </time>
  <h3 class="text-lg font-semibold text-yellow-500/90 dark:text-yellow-400/90 ">{title}</h3>
  <p class="mb-4 text-base font-normal text-gray-500 text-pretty dark:text-gray-400">
    {description}
  </p>

  
</li>
